<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/hola_dispositivos_m_viles"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="36sp"
            android:textColor="@android:color/holo_orange_dark" android:id="@+id/mitexto"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.012"
            android:fontFamily="sans-serif" android:textAlignment="viewEnd"/>

    <Button
            android:id="@+id/button15"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="threePressed"
            android:text="@string/_3"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button17" />

    <Button
            android:id="@+id/button16"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="twoPressed"
            android:text="@string/_2"
            app:layout_constraintStart_toEndOf="@+id/bt"
            app:layout_constraintTop_toTopOf="@+id/button17" />
    <Button
            android:text="@string/_1"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:id="@+id/button17"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/button13" app:layout_constraintStart_toStartOf="@+id/bt"
            android:onClick="onePressed"/>
    <Button
            android:text="@string/Percentage"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:id="@+id/button18"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button17" android:onClick="sumPressed"/>

    <Button
            android:id="@+id/button11"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="sixpressed"
            android:text="@string/_6"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button13" />

    <Button
            android:id="@+id/button12"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="fivePressed"
            android:text="@string/_5"
            app:layout_constraintStart_toEndOf="@+id/bt"
            app:layout_constraintTop_toTopOf="@+id/button13" />

    <Button
            android:id="@+id/button13"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginTop="4dp"
            android:onClick="fourPressed"
            android:text="@string/_4"
            app:layout_constraintStart_toStartOf="@+id/bt"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
            android:id="@+id/button14"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="subtractionPressed"
            android:text="@string/subtraction"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button13" />

    <Button
            android:id="@+id/button7"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="ninePressed"
            android:text="@string/_9"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
            android:id="@+id/button8"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="eigthPressed"
            android:text="@string/_8"
            app:layout_constraintStart_toEndOf="@+id/bt"
            app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
            android:id="@+id/button9"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginTop="4dp"
            android:onClick="sevenPressed"
            android:text="@string/_7"
            app:layout_constraintStart_toStartOf="@+id/bt"
            app:layout_constraintTop_toBottomOf="@+id/bt" />

    <Button
            android:id="@+id/button10"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="multiplicationPressed"
            android:text="@string/Multiplication"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
            android:id="@+id/bt"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="acPressed"
            android:text="@string/ac"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mitexto" />

    <Button
            android:id="@+id/button4"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="signPressed"
            android:text="@string/plusOrLess"
            app:layout_constraintStart_toEndOf="@+id/bt"
            app:layout_constraintTop_toTopOf="@+id/bt" />

    <Button
            android:id="@+id/button5"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="percentagePressed"
            android:text="@string/Percent"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
            android:id="@+id/button6"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="divisionPressed"
            android:text="@string/Division"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
            android:id="@+id/button"
            android:layout_width="178dp"
            android:layout_height="94dp"
            android:layout_marginTop="4dp"
            android:onClick="zeroPressed"
            android:text="@string/_0"
            app:layout_constraintStart_toStartOf="@+id/bt"
            app:layout_constraintTop_toBottomOf="@+id/button17" />

    <Button
            android:id="@+id/button2"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="8dp"
            android:onClick="dotPressed"
            android:text="@string/dot"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
            android:text="@string/equal"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button2" android:onClick="equalsPressed"/>

</android.support.constraint.ConstraintLayout>